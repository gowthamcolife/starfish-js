{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es7"
    ],
    "declaration": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/node/",
    "rootDir": "./src/",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
